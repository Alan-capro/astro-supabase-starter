<script>
  // æ­¥éª¤ç®¡ç†
  let currentStep = 1;
  const totalSteps = 5;
  
  // åˆå§‹åŒ–é¡µé¢
  document.addEventListener('DOMContentLoaded', function() {
    // è®¾ç½®å½“å‰æ—¥æœŸ
    const currentDate = new Date();
